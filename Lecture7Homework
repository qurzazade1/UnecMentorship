MinMax2DimArray.cs

public class MinMax2DimArray
    {
        public int FindMaxElement(int[] nums)
        {
            int max = 0;
            for (int i=0; i<nums.Length; i++)
            {
                if (max < nums[i])
                {
                    max = nums[i];
                }
            }
            return max;
        }
        public int FindMinElement(int min,int[] nums) 
        {
         for (int i=0; i<nums.Length; i++)
            {
                if (min > nums[i]) 
                { 
                
                min = nums[i];
                
                }
            }
            return min;
        }
        
        
        
        
        
        
        
        Square.cs
    
    class Square

    {
        public int a;
        public int b;
        public void CalculatePerimeter(int a)
        {
            int perimeter = 4 * a;
            Console.WriteLine("Perimeter of Square is: "+perimeter);
        }

        public void CalculateArea(int b)
        {
            int area = b * b;
            Console.WriteLine("Area of Square is: "+ area);
        }
    }
    
    
    
    
    
    
    
    Program.cs
    
    class Program
    {
        static void Main(string[] args)
        {
            //int[] myarray = { 1, 2, 3, 4, 5 };
            //Homework-1: create new class
            //where it can calculate the area and perimeter of square
            Square MyFirstSquare = new Square();

            MyFirstSquare.CalculatePerimeter(5);
            MyFirstSquare.CalculateArea(5);




            //Homework-2: Write a new class where you can calculate the min element in 2 dimentional array
            //Also with another method the max element of 2 dim.array
            // The method type should be int

            MinMax2DimArray MinimumElement = new MinMax2DimArray();

            int FindingMinimum = MinimumElement.FindMinElement(12, new[] { 1, 2, 3, 4, 5 });
            Console.WriteLine(FindingMinimum);

            MinMax2DimArray MaximumElement = new MinMax2DimArray();
            int FindingMaximum = MinimumElement.FindMaxElement(new[] { 4, 5, 6, 7, 9, 18 });
            Console.WriteLine(FindingMaximum);

            /*
              + 5 dene eded daxil et. Bunlarda 2 denesi 3 reqemli. 2 denesi 6 reqemli. 1 denesi 7 reqemli olsun.

             + 3 reqemli ededlerin cemini tap ve cavabin axirdan 2 denesini kvadratini tap.

             + Sonra alinan cavabin ustune 3 reqemli ededlerin bir birine yapishdirilmasindan sonra alinan ededei gel.
             + Cavabdan 7 reqemli ededin son 5 reqemini cix.

             + Alinan neticenin uzerine 6 reqemlilerin ceminden alinan cavabin axirinci 3 dene ededini gel.

              Neticenin uzerine 7 reqemli ededin reqemleri ceminin tersine duzulmesinden alinan cavabi gel.

              Cavabin axirina 11 artir.'  Sonra 7 reqemli ededin tek yerde dayan reqemlerinde alinan ededi cix.

              Cavabin axirdan II reqemi ile axirinci reqemin arasina 88 elave et.*/

            int[] array1 = { 123, 432, 234444, 900876, 7540987 };
            int k = 1;
            int sum = 0;
            for (int i = 0; i<array1.Length; i++)
            {
           
                if (array1[i]>=100*k)
                {
                    //1. 3 reqemli ededlerin cemini tap ve cavabin axirdan 2 denesini kvadratini tap.
                    sum = sum + array1[i];
                    double qaliqsquare = Math.Pow(sum % 100, 2);
                    // 2. Sonra alinan cavabin ustune 3 reqemli ededlerin bir birine yapishdirilmasindan sonra alinan ededei gel.
                    double sum2 = qaliqsquare + int.Parse(array1[i].ToString() + array1[i++].ToString());

                    //3. Cavabdan 7 reqemli ededin son 5 reqemini cix.
                    for (int ii=0; ii<array1.Length; ii++)
                    {
                        if (array1[ii] >= 1000000)
                        {
                            double third = sum2 - array1[ii];

                          //  Alinan neticenin uzerine 6 reqemlilerin ceminden alinan cavabin axirinci 3 dene ededini gel.

                            if (array1[ii] >= 100000)
                            {
                                double sum3 = 0;
                                sum3 = +array1[ii];
                                double fourth = sum3 % 1000;
                                double fifth = fourth + third;
                                //  Neticenin uzerine 7 reqemli ededin reqemleri ceminin tersine duzulmesinden alinan cavabi gel.

                                int ReverseNumber = 0;
                                if (array1[ii]>1000000)
                                {
                                    for (int element= 7540987; element>0; element/=10)
                                    {
                                        ReverseNumber = (ReverseNumber * 10) + (element % 10);
                                       
                                    }
                                    double sixth = ReverseNumber + fifth;
                                    Console.WriteLine(sixth);
                                }

                            }
                        }

                    }
                   

                }
               


            }
    
